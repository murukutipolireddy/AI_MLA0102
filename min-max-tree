def minimax(depth, node, isMax, values, alpha, beta, maxDepth):
    # Leaf node
    if depth == maxDepth:
        return values[node]

    if isMax:
        best = -9999
        for i in range(2):
            val = minimax(depth+1, node*2+i, False,
                          values, alpha, beta, maxDepth)
            best = max(best, val)
            alpha = max(alpha, best)
            if beta <= alpha:
                break
        return best
    else:
        best = 9999
        for i in range(2):
            val = minimax(depth+1, node*2+i, True,
                          values, alpha, beta, maxDepth)
            best = min(best, val)
            beta = min(beta, best)
            if beta <= alpha:
                break
        return best

# Leaf values
values = [3, 5, 6, 9, 1, 2, 0, -1]
maxDepth = 3

print("Optimal value is:",
      minimax(0, 0, True, values, -9999, 9999, maxDepth))
